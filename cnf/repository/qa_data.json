		"ebuild.nesteddie",
		"ebuild.absdosym",
		"ebuild.minorsyn",
		"ebuild.badheader",
		"ebuild.patches",
		"file.empty",
		"file.size",
		"HOMEPAGE.virtual",
		"inherit.unused",
		"inherit.deprecated",
		"IUSE.rubydeprecated",
		"java.eclassesnotused",
		"KEYWORDS.dropped",
