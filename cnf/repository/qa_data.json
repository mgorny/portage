		"changelog.missing",
		"changelog.notadded",
		"dependency.unknown",
		"dependency.badmasked",
		"dependency.badindev",
		"dependency.badmaskedindev",
		"dependency.badtilde",
		"dependency.equalsversion",
		"dependency.missingslot",
		"dependency.perlcore",
		"DESCRIPTION.toolong",
