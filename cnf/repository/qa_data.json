		"LICENSE.deprecated",
		"LICENSE.virtual",
		"metadata.warning",
		"PDEPEND.suspect",
		"portage.internal",
		"RDEPEND.implicit",
		"RDEPEND.suspect",
		"repo.eapi-deprecated",
		"RESTRICT.invalid",
		"usage.obsolete",
		"upstream.workaround",
